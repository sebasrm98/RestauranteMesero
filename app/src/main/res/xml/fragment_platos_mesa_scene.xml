<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="92dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="88dp"
            android:id="@+id/imageButton"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_editor_absoluteX="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
        <Constraint
            android:layout_width="89dp"
            android:layout_height="86dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageButton2"
            android:layout_marginStart="8dp" />
        <Constraint
            android:layout_height="53dp"
            android:layout_width="68dp"
            android:id="@+id/btnActualizarPedido"
            motion:layout_constraintTop_toBottomOf="@+id/scrollView2"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />
        <Constraint
            android:layout_height="340dp"
            android:layout_width="381dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/scrollView2"
            motion:layout_constraintTop_toBottomOf="@+id/imageButton2" />
        <Constraint
            android:layout_height="38dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="91dp"
            android:id="@+id/linearLayout2"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="735dp"
            android:layout_width="411dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/fragment2"
            motion:layout_constraintTop_toTopOf="@+id/imageView3"
            motion:layout_constraintEnd_toEndOf="@+id/imageView3"
            motion:layout_editor_absoluteY="0dp" />
        <Constraint
            android:layout_height="92dp"
            android:layout_width="88dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/imageButton" />
        <Constraint
            android:layout_width="88dp"
            android:layout_height="92dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageButton" />
        <Constraint
            android:layout_height="86dp"
            android:layout_width="89dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageButton2"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            motion:layout_constraintBottom_toTopOf="@+id/imageView3" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/menu" >
        <Constraint
            android:layout_height="310dp"
            android:layout_width="412dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageView3"
            motion:layout_constraintTop_toBottomOf="@+id/fragment3" />
        <Constraint
            android:layout_width="418dp"
            android:layout_height="308dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/fragment3"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_editor_absoluteY="113dp"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:layout_height="209dp"
            motion:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_width="381dp"
            android:id="@+id/scrollView2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_height="92dp"
            android:layout_width="88dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/imageButton"
            motion:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:layout_height="86dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_width="89dp"
            android:id="@+id/imageButton2"
            motion:layout_constraintBottom_toTopOf="@+id/imageView3"
            android:layout_marginBottom="260dp" />
        <Constraint
            android:layout_height="38dp"
            motion:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_width="91dp"
            android:id="@+id/linearLayout2"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:layout_height="53dp"
            android:layout_width="68dp"
            android:id="@+id/btnActualizarPedido"
            motion:layout_constraintTop_toBottomOf="@+id/scrollView2"
            motion:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/menu" >


        <OnClick motion:targetId="@+id/imageButton2" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end" >
        <OnClick motion:targetId="@+id/imageButton" />
    </Transition>


</MotionScene>